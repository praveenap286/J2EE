import java.util.Scanner;
class astric
{
public static void main(String[] praveen)
{

int a=1,b=1,c,n;
Scanner scan= new Scanner(System.in);
n=scan.nextInt();

for(a=1;a<=n;a++){

for(b=1;b<=a;b++)
{
System.out.print('*');
}

for(c=a+1;c<=n;c++)
{
System.out.print(' ');
}


System.out.println();
}
}
}
